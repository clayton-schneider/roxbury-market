---
import Layout from "../layouts/Layout.astro";
import { Image } from "@astrojs/image/components";
---

<Layout
  SEO={{
    metaTitle: "About Us | Simply Sprout Starter",
    metaDescription: "The starter template for all Simply Sprout websites.",
  }}
>
  <section
    class="px-edge py-10 lg:py-20 min-h-[600px] relative overflow-hidden flex justify-center items-center"
  >
    <Image
      class="absolute left-0 top-0 w-full object-cover"
      src={import("@img/about.jpg")}
      alt="historical photo of roxbury market"
    />
    <div class="max-w-screen-xl mx-auto relative z-10 text-white text-center">
      <h1 class="font-bold text-4xl lg:text-5xl">Our Story</h1>
      <p class="mt-3 max-w-2xl mx-auto leading-relaxed text-lg">
        Nearly 100 years ago The Roxbury Market was known as Hodges. For
        generations The Roxbury Market has been an integral part of the Roxbury
        community. Nestled in the center of town, dedicated to uplifting the
        local community. <span class="font-bold">The Pulse of Roxbury.</span>
      </p>
    </div>
  </section>
  <section class="px-edge py-10 lg:py-20">
    <div class="max-w-screen-xl mx-auto flex justify-between items-center">
      <Image
        class="rounded-full w-[500px] h-[500px] object-cover"
        width={500}
        src={import("@img/home/wayne.jpg")}
        alt="wayne ferris"
      />
      <div class="max-w-2xl">
        <h2 class="font-bold text-text-dark text-3xl lg:text-4xl">My Story</h2>
        <p class="mt-3 text-lg leading-relaxed">
          Lorem ipsum dolor sit amet, consectetur adipisicing elit. Temporibus
          quisquam commodi doloremque alias blanditiis facilis praesentium
          perferendis voluptatem, illum totam?
        </p>
      </div>
    </div>
  </section>

  <section></section>
</Layout>
