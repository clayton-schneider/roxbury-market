---
import { Image } from "@astrojs/image/components";
import Layout from "src/layouts/Layout.astro";
---

<Layout
  SEO={{
    metaTitle: "Our Menu | The Roxbury Market",
    metaDescription:
      "Take a look at our menu for food ready to order as well as catering options.",
  }}
>
  <section class="px-edge py-10 lg:py-20">
    <div class="max-w-screen-xl mx-auto text-center">
      <h1 class="font-bold text-4xl lg:text-5xl text-text-dark">Our Menu</h1>
      <p class="mt-3 text-lg">
        <span class="font-bold">Please note:</span> All food prices subject to Market
        Value as prices fluctuate due to Supply Chain Issues
      </p>
      <a href="/menu.pdf" target="_blank">
        <Image
          width={1280}
          src={import("@img/menu/menu-1.png")}
          alt="roxbury market deli menu"
        />
        <Image
          width={1280}
          src={import("@img/menu/menu-2.png")}
          alt="roxbury market deli menu"
        />
      </a>
    </div>
  </section>
</Layout>
